rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to published blog posts (no authentication required)
    match /blogs/{blogId} {
      allow read: if resource.data.published == true;
      allow write: if false; // Only allow writes through admin/functions
    }
    
    // Allow read/write access to FCM tokens for anyone (for notification subscriptions)
    match /fcmTokens/{tokenId} {
      allow read, write: if true;
    }
    
    // Allow access to branding kits for authenticated users
    match /brandkits/{kitId} {
      // Users can read their own kits and query by their email
      allow read: if request.auth != null && 
        (resource.data.email == request.auth.token.email || 
         (resource.data.email is list && request.auth.token.email in resource.data.email));
      // Allow querying branding kits collection if user is authenticated
      allow list: if request.auth != null;
      // Only functions/admins can write
      allow write: if false;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 